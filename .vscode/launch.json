{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "extension",
			"preLaunchTask": "make dev_debugging",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/build",
				"${workspaceFolder}/debuggee"
			],
			"stopOnEntry": false,
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"sourceMaps": true,
		},
		{
			"name": "codelldb",
			"preLaunchTask": "make codelldb",
			"type": "lldb",
			"request": "launch",
			//"initCommands": ["set set target.disable-aslr false"],
			"program": "${workspaceFolder}/build/adapter2/codelldb",
			"args": [
				"--multi-session",
				"--port=4711"
			],
			"linux": {
				"args": [
					"--multi-session",
					"--port=4711",
					"--libpython=libpython3.6m.so",
				],
			},
			"sourceLanguages": [
				"cpp",
				"rust"
			],
			"terminal": "integrated",
			"env": {
				"RUST_LOG": "error,codelldb=debug",
				"RUST_LOG_STYLE": "always",
				"RUST_BACKTRACE": "full",
			},
			"windows": {
				"env": {
					"PATH": "${env:PATH};C:\\Python36-64;${workspaceFolder}\\build\\lldb\\bin",
					"RUST_LOG": "error,codelldb=debug",
					"RUST_LOG_STYLE": "always",
					"RUST_BACKTRACE": "full",
				},
			},
		},
		{
			"name": "codelldb on Windows+cppvsdbg",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "make codelldb",
			"program": "${workspaceFolder}/build/adapter2/codelldb.exe",
			"args": [
				"--multi-session",
				"--port=4711"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "PATH",
					"value": "${env:PATH};C:\\Python36-64;${workspaceFolder}\\build\\lldb\\bin"
				},
				{
					"name": "RUST_LOG",
					"value": "error,codelldb=debug"
				},
				{
					"name": "RUST_LOG_STYLE",
					"value": "always"
				},
				{
					"name": "RUST_BACKTRACE",
					"value": "full"
				},
			],
		},
		{
			"name": "codelldb find-python",
			"type": "lldb",
			"request": "launch",
			"preLaunchTask": "make codelldb",
			"program": "${workspaceFolder}/build/adapter2/codelldb",
			"args": ["find-python"]
		},
		{
			"name": "codelldb python",
			"type": "python",
			"request": "attach",
			"preLaunchTask": "wait for port 4730",
			"port": 4730,
			"host": "127.0.0.1",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}/",
					"remoteRoot": "${workspaceFolder}/build/"
				}
			]
		},
		{
			"name": "test codelldb",
			"preLaunchTask": "make dev_debugging",
			"type": "lldb",
			"request": "launch",
			"cargo": {
				"args": [
					"test",
					"--lib",
					"--no-run",
					"-p",
					"codelldb"
				]
			},
			"args": [
				"--nocapture",
				"--test-threads=1"
			],
			"env": {
				"RUST_LOG": "debug",
				"RUST_BACKTRACE": "1",
			},
			"sourceLanguages": [
				"cpp",
				"rust"
			],
			"terminal": "integrated"
		},
		{
			"name": "tests",
			"preLaunchTask": "make tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}/build",
			"program": "${workspaceRoot}/build/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"--exit",
				//"-g", "Environment",
				"tests"
			],
			"env": {
				"TARGET_TRIPLE": "x86_64-unknown-linux-gnu",
				"NODE_PATH": "${workspaceRoot}/build",
				"BUILD_DIR": "${workspaceRoot}/build",
				"SOURCE_DIR": "${workspaceRoot}",

				"RUST_LOG": "error,codelldb=debug",
				"RUST_BACKTRACE": "full",
				//"DEBUG_SERVER": "4711"
			},
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"sourceMaps": true
		},
		{
			"name": "python: current file",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"name": "debuggee remote qemu",
			"type": "lldb",
			"request": "custom",
			"targetCreateCommands": [
				"target create ${env:HOME}/tmp/echo",
			],
			"processCreateCommands": [
				"gdb-remote 127.0.0.1:4711",
				"target modules load --file ${env:HOME}/tmp/echo -s 0x4000000000"
			]
		},
	]
}
