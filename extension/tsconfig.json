{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"../build/node_modules/*",
				"../build/node_modules/@types/*",
			]
		}
	}
}
