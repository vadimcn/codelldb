{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "extension",
			"preLaunchTask": "build",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/**/*.js"
			]
		},
		{
			"name": "adapter",
			"type": "python",
			"request": "launch",
			"pythonPath": "${config:python.pythonPath}",
			"console": "integratedTerminal",
			"program": "${workspaceRoot}/tools/debug_adapter.py",
			"cwd": "${workspaceRoot}",
			"debugOptions": [
				"WaitOnAbnormalExit",
				"WaitOnNormalExit"
			]
		},
		{
			"name": "tests",
			"preLaunchTask": "build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"runtimeArgs": [
				"--nolazy",
				"--harmony"
			],
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"./out/tests"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/tests"
			]
		},
		{
			"name": "debuggee launch",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceRoot}/out/tests/debuggee",
			// "initCommands": [
			// 	"platform select remote-macosx",
			// 	"platform connect connect://127.0.0.1:1234"
			// ],
			"stopOnEntry": false,
			"env": {
				"FOO": "bar"
			},
			"args": [
				"vars"
			],
			"cwd": "${workspaceRoot}"
		},
		{
			"name": "debuggee attach",
			"type": "lldb",
			"request": "attach",
			"program": "${workspaceRoot}/out/tests/debuggee",
			"pid": "${command:pickMyProcess}"
		},
		{
			"name": "debuggee custom",
			"type": "lldb",
			"request": "custom",
			"initCommands": [
				"target create ${workspaceRoot}/out/tests/debuggee"
			],
			"preRunCommands": [
				"process launch -- vars"
			]
		},
		{
			"name": "debuggee remote",
			"type": "lldb",
			"request": "custom",
			"initCommands": [
				"target create  ${workspaceRoot}/out/tests/debuggee"
			],
			"preRunCommands": [
				"gdb-remote 127.0.0.1:1234",
				"continue"
			]
		},
		{
			"name": "rusttypes",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceRoot}/out/tests/rusttypes",
			"cwd": "${workspaceRoot}",
			"sourceLanguages": [
				"rust"
			],
			"sourceMap": {
				"/Users/travis/build/rust-lang/rust/": "${workspaceRoot}/../rust/"
			}
		},
		{
			"name": "preview_html",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceRoot}/out/tests/debuggee",
			"initCommands": [
				"command script import '${workspaceRoot}/extension/tests/debug.py"
			],
			"args": ["mandelbrot"]
		}
	]
}
